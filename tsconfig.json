{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ESNext",
		"strict": true,
		"outDir": "lib/",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"**/__fixtures__/**",
		"**/__tests__/**",
		"node_modules",
		"src/**/*.spec.ts"
	]
}
