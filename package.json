{
  "name": "@jdpnielsen/assemble",
  "version": "0.0.0",
  "description": "CLI to generate files based on templates",
  "files": [
    "!lib/__tests__/**/*",
    "lib/**/*",
    "bin/**/*"
  ],
  "bin": {
    "assemble": "bin/index.js"
  },
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./lib/",
    "cm": "cz",
    "lint": "eslint ./src/ --fix",
    "start": "tsx ./src/cli.ts",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdpnielsen/assemble.git"
  },
  "license": "MIT",
  "author": {
    "name": "Joshua Nielsen",
    "email": "jdpnielsen@gmail.com",
    "url": "https://github.com/jdpnielsen"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "typescript",
    "template",
    "generator"
  ],
  "bugs": {
    "url": "https://github.com/jdpnielsen/assemble/issues"
  },
  "homepage": "https://github.com/jdpnielsen/assemble#readme",
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "case-anything": "^2.1.13",
    "commander": "^7.2.0",
    "cosmiconfig": "^8.3.6",
    "enquirer": "^2.4.1",
    "eta": "^3.1.1",
    "ts-morph": "^20.0.0",
    "tsx": "^4.7.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.8.8",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "commitizen": "^4.3.0",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "5.1.1",
    "husky": "^6.0.0",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.1",
    "semantic-release": "^21.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
